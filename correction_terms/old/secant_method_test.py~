#/usr/bin/env python
import unittest
from secant_method import *
def f(x):
    return x*(x-1)+0.25-1e-8

class TestSecantMethod(unittest.TestCase):

    def yabstol(self):
        abstol=1e-10
        x = secant_method(f, x0=2, verbose=True, yabstol=abstol)
        print "f({0:12.5g}) = {1:12.5g}".format(x,f(x))
        self.assertTrue(abs(f(x))<abstol)

    def xabstol(self):
        abstol=1e-10
        x = secant_method(f, x0=2, verbose=True, xabstol=abstol)
        print x
        self.assertTrue(abs(x-0.5)<abstol)

    def runTest(self):
        self.yabstol()
        self.xabstol()


if __name__ == '__main__':
    unittest.main()
